{
  "root": true,
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["./tsconfig.json"]
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts",
    "dist/**",
    "vite.config.ts",
    "esbuild.mjs",
    "rmdir.mjs"
  ],
  "rules": {
    "@typescript-eslint/consistent-type-imports": "error"
  }
}
