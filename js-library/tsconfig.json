{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/src/**/*.test.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.mock.ts",
    "**/src/**/*mock*"
  ]
}
