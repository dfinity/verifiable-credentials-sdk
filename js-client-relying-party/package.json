{
  "name": "vc-client-relying-party",
  "version": "0.0.1",
  "description": "Library to interact with the identity provider to get a credential presentation.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier --write .",
    "rmdir": "node ./rmdir.mjs",
